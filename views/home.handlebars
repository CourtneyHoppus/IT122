<html>
  <body class="home">
    <hr>
    <div class="row">
      {{#if cats}}
        {{#each cats}}
        <div class="col s12 m6 center">
        <div class="card blue-grey lighten-3">
          <div class="card-content black-text center" >
            <span class="card-title">Cat: {{name}}</span>
          </div>
          <div class="card-action">
            <a class="btn white-text blue-grey lighten-1"
                href="/detail?name={{name}}">Learn more about {{name}}!</a>
          </div>
        </div>
        </div>
        {{/each}}
      {{else}}  
        {{{body}}}
      {{/if}}
    </div>
  </body>
</html>
